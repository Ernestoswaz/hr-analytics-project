DAX

-- Clean Total working days = 
       VAR totalworkdays = COUNT('Clean Data'[Value])
       VAR nonworkdays = CALCULATE(COUNT('Clean Data'[Value]),'Clean Data'[Value] IN {"WO", "HO"})
-- RETURN
      totalworkdays-nonworkdays

-- Present days = 
       VAR Presentdays= 
            CALCULATE(COUNT('Clean Data'[Value]), 'Clean Data'[Value] = "P")
-- RETURN
       Presentdays + [WFH count]

